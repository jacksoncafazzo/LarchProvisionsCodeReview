@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}
<div class="manage-account">
    <div class="container">

        <br />
        <div class="row">
            <form asp-controller="Manage" asp-action="ChangePassword" method="post" class="col s12">
                <div class="row">
                    <h4>Change Password Form</h4>
                    <hr />
                    <div asp-validation-summary="ValidationSummary.All" class="text-danger"></div>
                    <div class="input-field">
                        <label asp-for="OldPassword" class="col s12"></label>

                        <input asp-for="OldPassword" class="validate" />
                        <span asp-validation-for="OldPassword" class="text-danger"></span>
                    </div>
                    <div class="input-field">
                        <label asp-for="NewPassword" class="col s12"></label>

                        <input asp-for="NewPassword" class="validate" />
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>
                    <div class="input-field">
                        <label asp-for="ConfirmPassword" class="col s12"></label>

                        <input asp-for="ConfirmPassword" class="validate" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="input-field">
                        <div class="col s12">
                            <button type="submit" class="btn btn-default">Change password</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}