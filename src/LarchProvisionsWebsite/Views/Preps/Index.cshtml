@model IEnumerable<LarchProvisionsWebsite.Models.Prep>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(m => m.PrepId)</th>
        <th>@Html.DisplayNameFor(m => m.RecipeId)</th>
        <th>@Html.DisplayNameFor(m => m.IngredientId)</th>
    </tr>

    
@foreach (var item in Model) {
    <tr>
        <td>@Html.DisplayFor(m=> item.PrepId)</td>
        <td>@Html.DisplayFor(m => item.RecipeId)</td>
        <td>@Html.DisplayFor(m => item.IngredientId)</td>
        <td>
            <a asp-action="Edit" asp-route-id="@item.PrepId">Edit</a> |
            <a asp-action="Details" asp-route-id="@item.PrepId">Details</a> |
            <a asp-action="Delete" asp-route-id="@item.PrepId">Delete</a>
        </td>
    </tr>
}
</table>
