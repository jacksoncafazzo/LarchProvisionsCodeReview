@model LarchProvisionsWebsite.Models.Menu

@{
    ViewData["Title"] = "Details";
}

<div class="container menu-display">
    <h4>@Html.DisplayFor(model => model.Title)</h4>
    <div class="row">
        <div class="col l6 m6 s12">
            <h4>Order by 8pm @Model.OrderBy.Month/@Model.OrderBy.Day/@Model.OrderBy.Year</h4>
        </div>
        <div class="col l6 m6 s12">

            <h4>
                Pickup on @Model.PickupTime.Month/@Model.PickupTime.Day/@Model.PickupTime.Year after 11am
            </h4>
            
        </div>
    </div>
    <div class="row">

        @foreach (var recipe in Model.Recipes)
            {
            <div class="col m6 l6 s6">
                <div class="card">
                    <div class="card-image waves-effect waves-block waves-light">
                        <img class="activator" src="http://lorempixel.com/image_output/food-q-c-640-480-5.jpg" alt="@recipe.Name" />
                    </div>
                    <div class="card-content">
                        <span class"card-title activator"><h5>@recipe.Name</h5><i class="material-icons right">more_vert</i></span>
                        <p>@recipe.Description</p>
                    </div>
                    <div class="container recipe-description">
                    </div>
                    <div class="card-reveal">
                        <span class="card-title">@recipe.Name<i class="material-icons right">close</i></span>
                        <div class="container">
                            <h5>$@recipe.CustPrice per serving</h5>
                            <h5>@recipe.Notes</h5>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<p>
    <a asp-action="Edit" asp-route-id="@Model.MenuId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</p>