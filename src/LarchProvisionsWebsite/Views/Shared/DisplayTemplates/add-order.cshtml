<!-- Modal Trigger -->
<h5><button data-target="addOrderModal" class="waves-effect waves-light btn modal-trigger">order this</button></h5>

<div id="addOrderModal" class="modal">

    <div class="modal-content">
        <div class="row">

            <div class="container">
                <div class="col s12">
                    <h4>ordering as @ViewData["UserName"].ToString()</h4>

                    <div class="row">
                        @if (Model.Recipes != null)
                        {
                            @using (Html.BeginForm("RemoveOrder", "Menus", FormMethod.Post))
                            {
                                @foreach (var recipe in Model.Recipes)
                                {
                                    @if (recipe.Orders != null)
                                    {
                                        <div class="col s12">
                                            <h5>@recipe.RecipeName: $@recipe.CustPrice</h5>
                                            @foreach (var order in recipe.Orders)
                                            {
                                                <p><i class="material-icons">redeem</i></p>
                                            }
                                            <div class="row">

                                                @foreach (var order in recipe.Orders)
                                                {
                                                    <div class="col s12">
                                                        <input hidden name="menuId" value="@Model.MenuId" />
                                                        <input hidden name="recipeId" value="@recipe.RecipeId" />
                                                        <button class="btn waves-effect waves-ripple" type="submit">
                                                            remove order
                                                        </button>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    }

                                }
                            }
                        }
                    </div>
                    <h4>your current orders total $@ViewData["CustTotal"]</h4>
                </div>
            </div>
        </div>
    </div>
</div>