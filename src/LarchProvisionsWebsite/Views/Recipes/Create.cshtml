@model LarchProvisionsWebsite.Models.Recipe

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>
<div class="row">
    <form asp-action="Create">
        <div class="form-horizontal">
            <h4>Recipe</h4>
            <hr />
            <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="col l8 m8 s7 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />

                <label asp-for="Description" class="col l6 m12 s12 control-label"></label>
                <div class="col">
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger" />
                </div>
            </div>

            <div class="col l4 m4 s5 control-label">@ViewData["MenuId"].ToString()</div>

            
            <div class="form-group">
                <label asp-for="Notes" class="col l6 m12 s12 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Notes" class="form-control" />
                    <span asp-validation-for="Notes" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="CustPrice" class="col l6 m6 s6 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="CustPrice" class="form-control" />
                    <span asp-validation-for="CustPrice" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ServingSize" class="col l6 m6 s6 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="ServingSize" class="form-control" />
                    <span asp-validation-for="ServingSize" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <div class="col l12 m12 s12">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    </form>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}