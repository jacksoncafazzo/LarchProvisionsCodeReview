@model LarchProvisionsWebsite.Models.Menu

@{
    ViewData["Title"] = "Details";
}

<div class="container menu-display">
    <h2>@Html.DisplayFor(model => model.Title)</h2>
    <div class="row">
        <div class="col l6 m6 s12">
            <h4>@Html.DisplayNameFor(model => model.OrderBy)</h4>
            <h4>
                @Html.DisplayFor(model => model.OrderBy)
            </h4>
        </div>
        <div class="col l6 m6 s12">

            <h4>
                @Html.DisplayNameFor(model => model.PickupTime)
            </h4>
            <h4>
                @Html.DisplayFor(model => model.PickupTime)
            </h4>
        </div>
    </div>
    <div class="row">
        <div class="col m12 l12 s12">
            @foreach (var recipe in Model.Recipes)
            {
                <div class="slider">
                    <ul class="slides">
                        <li>
                            <img src="http://lorempixel.com/image_output/food-q-c-640-480-5.jpg" alt="@recipe.Name" />
                            <div class="caption right-align">
                                <h3>@recipe.Name</h3>
                            </div>
                        </li>
                        <li>
                            <img src="http://lorempixel.com/image_output/food-q-c-640-480-2.jpg" alt="@recipe.Description" />
                            <div class="caption right-align">
                                <h5>@recipe.Description</h5>
                            </div>
                        </li>
                        <li>
                            <img src="http://lorempixel.com/image_output/food-q-c-640-480-4.jpg" alt="@recipe.CustPrice" />
                            <div class="caption right-align">
                                <h3>$@recipe.CustPrice per serving</h3>
                            </div>
                        </li>
                        <li>
                            <img src="http://lorempixel.com/image_output/food-q-c-640-480-8.jpg" alt="@recipe.Notes" />
                            <div class="caption right-align">
                                <h5>$@recipe.Notes</h5>
                            </div>
                        </li>
                    </ul>
                </div>
            }
        </div>
    </div>
</div>
<p>
    <a asp-action="Edit" asp-route-id="@Model.MenuId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</p>