@model AddPhoneNumberViewModel
@{
    ViewData["Title"] = "Add Phone Number";
}

<div class="manage-account">
    <div class="container">
<br />
        <div class="row">
            <form asp-controller="Manage" asp-action="AddPhoneNumber" method="post" class="col s12" role="form">
                <div class="row">
                <h4>add a phone number.</h4>
                <hr />
                <div asp-validation-summary="ValidationSummary.All" class="text-danger"></div>
                <div class="input-field">
                    <label asp-for="PhoneNumber" class="col s12"></label>
                    
                        <input asp-for="PhoneNumber" class="validate" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                  
                </div>
                <div class="input-field">
                    <div class="col s12 center">
                        <button type="submit" class="btn btn-default">Send verification code</button>
                    </div>
                </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
