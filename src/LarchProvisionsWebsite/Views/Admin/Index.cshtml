@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>
@{
    ViewBag.Title = "Admin";
}

<h2>Roles Listing </h2>

@Html.ActionLink("Create New Role", "CreateRole") | @Html.ActionLink("Manage User Role", "ManageUserRoles")
<hr />
<div>
    @using (Html.BeginForm())
    { 

    @foreach (var role in Model)
    {
        <p>
            <strong>@role.Name | @role.Id </strong>
            <span onclick="return confirm('Are you sure to delete?')"><a href="/Admin/Delete?RoleName=@role.Name" class="delLink">Delete</a></span> |
            @Html.ActionLink("Edit", "Edit", new { roleName = @role.Name })
        </p>
    }
    }
</div>