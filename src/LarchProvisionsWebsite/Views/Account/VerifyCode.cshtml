@model VerifyCodeViewModel
@{
    ViewData["Title"] = "Verify";
}

<div class="verify-number">
    <div class="container">
        <div class="row">
            <form asp-controller="Account" asp-action="VerifyCode" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="col s12" role="form">
                <div asp-validation-summary="ValidationSummary.All" class="text-danger"></div>
                <input asp-for="Provider" type="hidden" />
                <input asp-for="RememberMe" type="hidden" />
                <div class="row">
                    <h3>verify code sent via sms</h3>
                    <h4>@ViewData["Status"]</h4>
                    <hr />
                    <div class="input-field col s6">
                        <label asp-for="Code"></label>
               
                            <input asp-for="Code" class="validate" />
                            <span asp-validation-for="Code" class="text-danger"></span>
         
                    </div>
                    <div class="input-field col s3">
                            <input type="checkbox" asp-for="RememberBrowser" />
                            <label asp-for="RememberBrowser"></label>
                    </div>
                    <div class="input-field col s3">
                        <button type="submit" class="btn btn-default">Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}