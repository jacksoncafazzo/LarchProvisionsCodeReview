@model LarchProvisionsWebsite.Models.Menu

@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <h2>Edit</h2>
</div>
<div class="row">
    <form asp-action="Edit">
        <div class="col m6 l6 s12">
            <div class="form-horizontal">
                <h4>Menu</h4>
                <hr />
                <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="MenuId" />
                <div class="form-group">
                    <label asp-for="OrderBy" class="col m2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="OrderBy" class="form-control" />
                        <span asp-validation-for="OrderBy" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="PickupTime" class="col m2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="PickupTime" class="form-control" />
                        <span asp-validation-for="PickupTime" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Title" class="col m2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col m10">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </div>

        <div class="col m6 l6 s12">
            <div class="row">
                <h5>Menu #@Model.MenuId</h5>
                <div class="col m6 l6 s12">
                    <ul>
                        @using (Html.BeginForm("RemoveRecipe", "Menus", FormMethod.Post))
                        {
                            @Html.HiddenFor(m => m.MenuId)
                            <li><h4>Recipes</h4></li>

                            @foreach (var recipe in Model.Recipes)
                            {
                                @Html.DisplayFor(e => recipe, "list-recipes-admin")

                            }
                        }
                    </ul>
                </div>
                <div class="col-md-6">
                    <ul>
                        @using (Html.BeginForm("RemoveOrder", "Menus", FormMethod.Post))
                        {
                            @Html.HiddenFor(m => m.MenuId)
                            <li><h4>Orders</h4></li>
                            @foreach (var order in Model.Orders)
                            {

                                @Html.DisplayFor(e => order, "list-orders-admin")

                            }
                        }
                    </ul>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <ul>
                        @using (Html.BeginForm("ServeRecipe", "Menus", FormMethod.Post))
                        {

                            @Html.HiddenFor(m => m.MenuId)
                            <li><h3>Add Recipes</h3></li>
                            @foreach (var recipe in ViewBag.Recipes)
                            {
                                @Html.DisplayFor(model => recipe, "add-recipe")
                            }
                        }
                    </ul>
                    @Html.ActionLink("Create New Recipe", "Create", "Recipes", new { returnUrl = ViewData["ReturnUrl"] })
                </div>
                <div class="col-md-6">
                    <ul>
                        @using (Html.BeginForm("AddOrder", "Menus", FormMethod.Post))
                        {
                            @Html.HiddenFor(m => m.MenuId)
                            <li><h3>Add Orders</h3></li>
                            @foreach (var order in ViewBag.Orders)
                            {
                                @Html.DisplayFor(model => order, "add-order")
                            }
                        }
                    </ul>
                    @Html.ActionLink("Create New Order", "Create", "Orders", new { returnUrl = ViewData["ReturnUrl"] })
                </div>
            </div>
        </div>
        <div class="col l12 m12 s12">
            <a asp-action="Index">Back to List</a>
        </div>
    </form>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}