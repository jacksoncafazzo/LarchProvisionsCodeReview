@model IEnumerable<LarchProvisionsWebsite.Models.Menu>

@{
    ViewData["Title"] = "Index";
}

<div class="menu-list-wrapper">
    <div class="container menu-content-body">
        <br />
        <h3>
            @Html.ActionLink("create new menu", "Create")<i class="material-icons">new_releases</i>
        </h3>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OrderBy)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PickupBy)
                </th>
                
                <th></th>
            </tr>

           
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @{ var orderDate = item.OrderBy.ToString("d");}
                        @Html.DisplayFor(modelItem => orderDate)
                    </td>
                    <td>
                        @{ var pickupDate = item.PickupBy.ToString("d");}
                        @Html.DisplayFor(modelItem => pickupDate)
                    </td>


                    <td>
                        <a asp-action="Edit" asp-route-id="@item.MenuId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.MenuId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.MenuId">Delete</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>